<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gw150914.jabberwocky.gui.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/main_title"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/buttons_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="1">
            <TextView
                android:text="Bros Sound Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16pt"
                android:textAlignment="center"
                android:clickable="true"
                android:longClickable="true"
                android:id="@+id/textView"
                />
            <TextView
                android:text="@string/current_theme"
                android:background="@color/title_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textAlignment="textStart"
                android:clickable="true"
                android:longClickable="true"
                android:id="@+id/current_theme_display"
                />
        </LinearLayout>
                <LinearLayout
            android:id="@+id/main_sounds_list"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ListView
                android:id="@+id/sound_List_Display"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_buttons_zone"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/buttons_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <Button
                android:id="@+id/search_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/search_button" />
            <Button
                android:id="@+id/theme_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/theme_button" />
            <Button
                android:id="@+id/random_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/random_button" />
            <Button
                android:id="@+id/settings_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/settings_button" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
