<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gw150914.jabberwocky.gui.MainActivity">
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/main_title_background"
        android:text="@string/main_title"
        android:fontFamily="mono-bold"
        android:textSize="16pt"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/current_theme_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:background="@color/theme_background"
        android:text="@string/current_theme"
        android:fontFamily="mono-italic"
        android:textSize="8pt"
        android:textAlignment="textStart"
        />
    <ListView
        android:id="@+id/sound_List_Display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_theme_display"
        android:layout_above="@+id/main_buttons_zone"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:background="@drawable/sound_list_border"
        android:dividerHeight="4dp"
        android:divider="@color/list_divider"
        android:visibility="invisible"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/current_theme_display"
        android:layout_above="@+id/main_buttons_zone"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:visibility="gone"
        />
    <LinearLayout
        style="?metaButtonBarStyle"
        android:id="@+id/main_buttons_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_alignParentBottom="true">
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/search_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.25"
            android:text="@string/search_button"
            />
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/theme_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.25"
            android:text="@string/theme_button"
            />
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/random_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.25"
            android:text="@string/random_button"
            />
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/settings_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.25"
            android:text="@string/settings_button"
            />
    </LinearLayout>
</RelativeLayout>