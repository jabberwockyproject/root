<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gw150914.jabberwocky.gui.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/main_title"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/color_main_title_background"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="1">
            <TextView
                android:text="@string/main_title"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16pt"
                android:textAlignment="center"
                android:clickable="true"
                android:longClickable="true"
                android:id="@+id/textView"
                />
            <TextView
                android:text="@string/current_theme"
                android:fontFamily="sans-serif-condensed"
                android:background="@color/color_theme_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textAlignment="textStart"
                android:clickable="true"
                android:longClickable="true"
                android:id="@+id/current_theme_display"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_sounds_list"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_gravity="center|center_horizontal"
            android:background="@color/color_list_item"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ListView
                android:id="@+id/sound_List_Display"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/draw_sound_list_border"
                android:padding="4dp"
                android:dividerHeight="4dp"
                android:divider="@color/color_list_divider"/>
            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"
                android:background="@color/color_list_item"
                android:layout_weight="1"
                android:layout_gravity="center|center"
                android:visibility="gone"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/main_buttons_zone"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:ignore="UselessParent">
            <Button
                android:id="@+id/search_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/search_button" />
            <Button
                android:id="@+id/theme_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/theme_button" />
            <Button
                android:id="@+id/random_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/random_button" />
            <Button
                android:id="@+id/settings_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:text="@string/settings_button" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
