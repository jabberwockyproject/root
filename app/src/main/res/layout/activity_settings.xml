<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gw150914.jabberwocky.gui.SettingsActivity">
    <TabHost
        android:id="@+id/settings_tab_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">
                <LinearLayout
                    android:id="@+id/settings_tab_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/skins_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:text="@string/show_help"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/showHelpCheckBox" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skin"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="8pt"
                            android:textAlignment="textStart"
                            android:visibility="gone"
                            >
                        </TextView>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/skins_spinner"
                            android:visibility="gone">
                        </Spinner>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/settings_tab_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:text="@string/custom_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customVolumeCheckBox" />
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customVolumeSeekBar"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/settings_tab_advanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/linear_loading_thread_container"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/linear_loading_thread_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/linear_loading_thread"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="8pt"
                            android:textAlignment="center">
                        </TextView>
                        <RadioGroup
                            android:id="@+id/linear_loading_thread_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">
                            <RadioButton
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/linear_loading_thread_0" />
                            <RadioButton
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/linear_loading_thread_1" />
                            <RadioButton
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/linear_loading_thread_2" />
                            <RadioButton
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/linear_loading_thread_3" />
                        </RadioGroup>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/smart_loading_thread_container"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/smart_loading_thread_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/smart_loading_thread"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="8pt"
                            android:textAlignment="center">
                        </TextView>
                        <RadioGroup
                            android:id="@+id/smart_loading_thread_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">
                            <RadioButton
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/smart_loading_thread_0" />
                            <RadioButton
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/smart_loading_thread_1" />
                            <RadioButton
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/smart_loading_thread_2" />
                            <RadioButton
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/smart_loading_thread_3" />
                        </RadioGroup>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ondemand_loading_thread_container"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ondemand_loading_thread_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/ondemand_loading_thread"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="8pt"
                            android:textAlignment="center">
                        </TextView>
                        <RadioGroup
                            android:id="@+id/ondemand_loading_thread_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">
                            <RadioButton
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:id="@+id/ondemand_loading_thread_1" />
                            <RadioButton
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:id="@+id/ondemand_loading_thread_2" />
                            <RadioButton
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:id="@+id/ondemand_loading_thread_3" />
                            <RadioButton
                                android:text="4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:id="@+id/ondemand_loading_thread_4" />
                        </RadioGroup>
                    </RelativeLayout>
                    <Switch
                        android:text="@string/adv_switch1"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adv_switch1"
                        android:visibility="visible"/>

                    <Switch
                        android:text="@string/adv_switch2"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/adv_switch2"
                        android:visibility="invisible"/>

                    <Switch
                        android:text="@string/adv_switch3"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/adv_switch3"
                        android:visibility="invisible"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
    <LinearLayout
        style="?metaButtonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/settings_cancel_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.5"
            android:text="Cancel">
        </Button>
        <Button
            style="?metaButtonBarButtonStyle"
            android:id="@+id/settings_accept_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.5"
            android:text="Accept">
        </Button>
    </LinearLayout>
</RelativeLayout>
